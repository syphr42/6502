#!/usr/bin/env bash
set -euo pipefail

function local_path()
{
    echo "$(dirname "$0")"/"$1"
}

function main()
{
    if [ "$#" -ne 1 ]; then
        echo "error: missing file to assemble"
        echo "usage: $(basename "$0") FILE"
        exit 1
    fi

    local output_dir
    output_dir="$(local_path ../output)"
    mkdir --parents "${output_dir}"

    local file="$1"
    # Expects vasm oldstyle
    vasm \
        -wdc02 \
        -dotdir \
        -Fbin \
        -nocompdir \
        -I"$(local_path ../vasm-includes)" \
        "${file}" \
        -o "${output_dir}/rom.bin"
}

main "$@"
